# =============================================================================
# Multi-Agent Environmental Research System - Configuration
# =============================================================================

# =============================================================================
# API Keys (Required)
# =============================================================================

# OpenAI API Key - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Tavily API Key for web search - https://tavily.com/
TAVILY_API_KEY=tvly-your-tavily-api-key

# =============================================================================
# Model Configuration
# =============================================================================

# Main model for agents
OPENAI_MODEL=gpt-4o-mini

# Model for orchestrator (can use more powerful model)
ORCHESTRATOR_MODEL=gpt-4o-mini

# Temperature settings
DEFAULT_TEMPERATURE=0.3
CREATIVE_TEMPERATURE=0.7

# =============================================================================
# Agent Configuration
# =============================================================================

# Maximum iterations for research loop
MAX_ITERATIONS=10

# Maximum sources to collect
MAX_SOURCES=20

# Timeout for each agent (seconds)
AGENT_TIMEOUT=120

# Enable fact-checking (slower but more accurate)
ENABLE_FACT_CHECKING=true

# =============================================================================
# Search Configuration
# =============================================================================

# Tavily search settings
TAVILY_SEARCH_DEPTH=advanced
TAVILY_MAX_RESULTS=10

# Include domains (comma-separated)
TRUSTED_DOMAINS=ipcc.ch,epa.gov,unep.org,iea.org,worldbank.org

# =============================================================================
# Output Configuration
# =============================================================================

# Default output format: markdown, html, docx
OUTPUT_FORMAT=markdown

# Reports directory
REPORTS_DIR=./data/reports

# Cache sources
CACHE_SOURCES=true
SOURCES_DIR=./data/sources

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, production
APP_ENV=development

# Debug mode
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Streamlit port
STREAMLIT_PORT=8501
