# =============================================================================
# Environmental Semantic Search Tool - Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Required)
# =============================================================================

# OpenAI API Key - Get at https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# Embedding Configuration
# =============================================================================

# Embedding model to use
# Options: text-embedding-3-small (recommended), text-embedding-3-large, text-embedding-ada-002
EMBEDDING_MODEL=text-embedding-3-small

# Embedding dimensions (for text-embedding-3-* models, can reduce for speed)
# text-embedding-3-small: max 1536, text-embedding-3-large: max 3072
EMBEDDING_DIMENSIONS=1536

# =============================================================================
# Vector Database Configuration
# =============================================================================

# Vector DB type: chroma (local) or pinecone (cloud)
VECTOR_DB_TYPE=chroma

# ChromaDB settings
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_NAME=environmental_docs

# Pinecone settings (if using cloud)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=us-east-1
# PINECONE_INDEX_NAME=env-search

# =============================================================================
# Document Processing
# =============================================================================

# Chunk size for document splitting (in characters)
CHUNK_SIZE=1000

# Overlap between chunks (in characters)
CHUNK_OVERLAP=200

# Minimum chunk size to keep
MIN_CHUNK_SIZE=100

# =============================================================================
# Search Configuration
# =============================================================================

# Default number of results to return
DEFAULT_TOP_K=5

# Minimum similarity score (0-1)
MIN_SIMILARITY_SCORE=0.3

# Enable hybrid search (vector + keyword)
ENABLE_HYBRID_SEARCH=false

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, production
APP_ENV=development

# Debug mode
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# API settings
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit settings
STREAMLIT_PORT=8501
