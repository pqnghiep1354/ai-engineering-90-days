# =============================================================================
# Environmental LLM Fine-tuning - Environment Configuration
# =============================================================================

# =============================================================================
# HuggingFace Configuration
# =============================================================================

# HuggingFace Token (required for gated models like Llama)
# Get from: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_token_here

# HuggingFace cache directory
HF_HOME=~/.cache/huggingface

# =============================================================================
# Weights & Biases (Optional)
# =============================================================================

# W&B API Key for experiment tracking
# Get from: https://wandb.ai/authorize
WANDB_API_KEY=your_wandb_key

# W&B project name
WANDB_PROJECT=env-llm-finetune

# Disable W&B (set to true to disable)
WANDB_DISABLED=false

# =============================================================================
# Model Configuration
# =============================================================================

# Default base model
DEFAULT_MODEL=microsoft/phi-2

# Model cache directory
MODEL_CACHE_DIR=./models/cache

# =============================================================================
# Training Configuration
# =============================================================================

# Default output directory
OUTPUT_DIR=./models/output

# Default dataset directory
DATA_DIR=./data/processed

# Enable mixed precision
USE_FP16=true

# Gradient checkpointing (save memory)
GRADIENT_CHECKPOINTING=true

# =============================================================================
# Hardware Configuration
# =============================================================================

# CUDA device
CUDA_VISIBLE_DEVICES=0

# Number of GPUs
NUM_GPUS=1

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Logging directory
LOG_DIR=./logs
